{
    "compilerOptions": {
        "module": "es6",
        "lib": ["dom", "es6"],
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/index.html"
    ]
}
